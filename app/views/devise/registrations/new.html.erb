<% content_for :title, "Inscription" %>

<div class="auth-container">
  <div class="auth-card">
    <div class="auth-header">
      <div class="auth-logo">
        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <path d="M10 5.172C10 3.782 8.423 2.679 6.5 3c-2.823.47-4.113 6.006-4 7 .08.703 1.725 1.722 3.656 1 1.261-.472 1.96-1.45 2.344-2.5M14.267 5.172c0-1.39 1.577-2.493 3.5-2.172 2.823.47 4.113 6.006 4 7-.08.703-1.725 1.722-3.656 1-1.261-.472-1.855-1.45-2.239-2.5M8 14v.5M16 14v.5M11.25 16.25h1.5L12 17l-.75-.75z"/>
          <path d="M4.42 11.247A13.152 13.152 0 0 0 4 14.556C4 18.728 7.582 21 12 21s8-2.272 8-6.444a11.702 11.702 0 0 0-.493-3.309"/>
        </svg>
      </div>
      <h1 class="auth-title">Créer un compte</h1>
      <p class="auth-subtitle">Rejoignez The Walking Dog</p>
    </div>

    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "auth-form" }) do |f| %>
      <%= f.error_notification message: "Veuillez corriger les erreurs ci-dessous", class: "error-notification" %>

      <%= f.input :email,
                  required: true,
                  autofocus: true,
                  label: "Email",
                  placeholder: "votre@email.com",
                  input_html: { autocomplete: "email" } %>

      <%= f.input :password,
                  required: true,
                  label: "Mot de passe",
                  hint: ("#{@minimum_password_length} caractères minimum" if @minimum_password_length),
                  placeholder: "••••••••",
                  input_html: { autocomplete: "new-password" } %>

      <%= f.input :password_confirmation,
                  required: true,
                  label: "Confirmer le mot de passe",
                  placeholder: "••••••••",
                  input_html: { autocomplete: "new-password" } %>

      <%= f.button :submit, "S'inscrire" %>
    <% end %>

    <div class="auth-links">
      <%= link_to "Déjà un compte ? Se connecter", new_session_path(resource_name) %>
    </div>
  </div>
</div>
