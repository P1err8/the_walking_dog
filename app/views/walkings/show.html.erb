

<div class="walkingmap-container"
     data-controller="map active-walking"
     data-map-api-key-value="<%= ENV.fetch('MAPBOX_API_KEY') %>"
     data-map-coordinates-value="<%= @walking.coordinates.to_json %>"
     data-active-walking-walking-id-value="<%= @walking.id %>"
     data-active-walking-walking-path-value="<%= walking_path(@walking) %>">
  <!-- this is the map -->
  <div class="walkingmap" data-map-target="map"></div>

  <%= render "shared/navigation_panel", walking: @walking %>
</div>
