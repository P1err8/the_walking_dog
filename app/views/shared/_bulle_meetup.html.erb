<div class="bulle-meetup">
  <button class="bulle-meetup__close" type="button">
    <svg width="16" height="16" viewBox="0 0 16 16" fill="none" aria-hidden="true">
      <path d="M12 4L4 12M4 4l8 8" stroke="currentColor" stroke-width="2" stroke-linecap="round" />
    </svg>
  </button>

  <div class="bulle-meetup__image">
        <img src="<%= image_url.presence || asset_path('meetup-placeholder.svg') %>"
         alt="<%= name %>"
         class="bulle-meetup__img"
          onerror="this.onerror=null;this.src='<%= asset_path('meetup-placeholder.svg') %>'" />
  </div>

  <div class="bulle-meetup__content">
    <div class="bulle-meetup__header">
      <span class="bulle-meetup__type"><%= type.presence || 'Point de rencontre' %></span>
    </div>

    <h3 class="bulle-meetup__title"><%= name %></h3>
    <p class="bulle-meetup__location"><%= location.presence || 'Lyon, France' %></p>

    <div class="bulle-meetup__details">
      <div class="bulle-meetup__distance">
        <span class="bulle-meetup__icon">ğŸ“</span>
        <span id="distance-<%= marker_id %>"><%= distance.presence || 'Calcul...' %></span>
      </div>
      <div class="bulle-meetup__duration">
        <span class="bulle-meetup__icon">ğŸš¶</span>
        <span id="duration-<%= marker_id %>"><%= duration.presence || '' %></span>
      </div>
    </div>

    <div class="bulle-meetup__footer">
      <div class="bulle-meetup__price">
        <span class="bulle-meetup__price-amount"><%= price.presence || 'Gratuit' %></span>
        <% if nights.present? || dates.present? %>
          <span class="bulle-meetup__price-info">
            <%= nights.presence || 'â€”' %> nuits Â· <%= dates.presence || '' %>
          </span>
        <% end %>
      </div>
    </div>
  </div>
</div>
