
	<!-- Drag Handle -->
	<div class="navigation-panel__drag-handle" data-action="click->navigation#togglePanel">
		<div class="navigation-panel__drag-indicator"></div>
		<button type="button" class="navigation-panel__toggle-btn" aria-label="Réduire/Agrandir">
			<svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round">
				<polyline points="6 9 12 15 18 9"></polyline>
			</svg>
		</button>
	</div>

	<!-- Heading and instruction -->
	<div class="navigation-panel__header">
		<h3 class="navigation-panel__title">Navigation</h3>
		<div class="navigation-panel__instruction-row">
			<div class="navigation-panel__icon" data-navigation-target="icon">
				<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor">
					<path d="M12 4l-1.41 1.41L16.17 11H4v2h12.17l-5.58 5.59L12 20l8-8z"/>
				</svg>
			</div>
			<p class="navigation-panel__instruction" data-navigation-target="instruction">
				Préparez-vous à partir
			</p>
		</div>
	</div>

	<!-- Stats -->
	<div class="navigation-panel__stats">
		<div class="navigation-panel__stat-card">
			<div class="navigation-panel__stat-value" data-navigation-target="distance">-- km</div>
			<div class="navigation-panel__stat-label">Distance restante</div>
		</div>
		<div class="navigation-panel__stat-card">
			<div class="navigation-panel__stat-value" data-navigation-target="duration">-- min</div>
			<div class="navigation-panel__stat-label">Durée estimée</div>
		</div>
	</div>

	<!-- Bouton Terminer -->
	<% if local_assigns[:meet_up] %>
		<%= button_to arrive_meet_up_participations_path(meet_up), method: :post, class: "navigation-panel__end-btn", data: { turbo: false } do %>
			<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor">
				<path d="M6 6h12v12H6z"/>
			</svg>
			Terminer
		<% end %>
	<% else %>
		<%= link_to root_path, class: "navigation-panel__end-btn", data: { turbo: false, action: "click->active-walking#clearActiveWalking" } do %>
			<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor">
				<path d="M6 6h12v12H6z"/>
			</svg>
			Terminer
		<% end %>
	<% end %>
