            <label for="dog-breed">Race</label>

            <div class="autocomplete-wrapper">
              <input
                type="text"
                id="dog-breed"
                class="form-input"
                placeholder="Commencez à taper (ex: Golden...)"
                autocomplete="off"
              >

              <div id="breed-results" class="autocomplete-results"></div>
            </div>
          </div>

